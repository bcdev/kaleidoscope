# License: MIT
#
set -e
## Times the processor. Usage example:
#
#  ./kaleidoscope-scatter-timeit --source-type ghrsst --selector 17 source.nc target.nc
#
procCmd="$(which kaleidoscope-scatter)"
timeCmd="$(which time)"

reader="zarr"
writer="zarr"

# shellcheck disable=SC2124
source="${@:$#-$#-2:1}"
# shellcheck disable=SC2124
target="${@:$#-$#-1:1}"

if [[ "${source}" == *.nc ]]
then
  reader="h5netcdf"
fi
if [[ "${target}" == *.nc ]]
then
  writer="h5netcdf"
fi

process() {
  "${timeCmd}" --verbose \
  "${procCmd}" \
    --engine-reader "${reader}" \
    --engine-writer "${writer}" \
    --log-level warning \
    --progress \
    "$@"
}


process "$@"
